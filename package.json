{
  "name": "solana",
  "displayName": "Solana",
  "description": "VS Code extension for Solana",
  "version": "0.0.2",
  "publisher": "AckeeBlockchain",
  "repository": "https://github.com/Ackee-Blockchain/solana-vscode",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tridentCoverage.show-coverage",
        "title": "Show Code Coverage"
      },
      {
        "command": "tridentCoverage.close-coverage",
        "title": "Close Code Coverage"
      }
    ],
    "configuration": {
      "title": "Coverage Display",
      "properties": {
        "tridentCoverage.showExecutionCount": {
          "type": "boolean",
          "default": true,
          "description": "Show execution count numbers next to covered statements"
        },
        "tridentCoverage.executionCountColor": {
          "type": "string",
          "enum": [
            "CYAN",
            "DEEP_PINK",
            "MAGENTA",
            "DODGER_BLUE",
            "WHITE",
            "BLACK",
            "ELECTRIC_PURPLE",
            "NEON_ORANGE",
            "LIME_GREEN",
            "GOLDEN_YELLOW",
            "VIVID_RED"
          ],
          "default": "CYAN",
          "description": "Color of the execution count display",
          "format": "color"
        },
        "tridentCoverage.dynamicUpdateInterval": {
          "type": "number",
          "default": 3000,
          "description": "Update interval in milliseconds for dynamic coverage"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
